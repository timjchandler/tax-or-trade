            <Button fx:id="btnMin" layoutX="40.0" layoutY="15.0" maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" onAction="#minimise" prefHeight="20.0" prefWidth="20.0" style="-fx-background-color: #faa307;" />
