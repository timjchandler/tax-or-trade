         <TextArea fx:id="topInfoA" prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/topText.css">
            <HBox.margin>
               <Insets right="25.0" />
            </HBox.margin>
         </TextArea>
         <TextArea fx:id="topInfoB" prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/topText.css">
            <HBox.margin>
               <Insets right="25.0" />
            </HBox.margin>
         </TextArea>
         <TextArea fx:id="topInfoC" prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/topText.css" />
      </HBox>
      <Pane fx:id="mainArea" layoutX="150.0" layoutY="50.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0" />
