      <RowConstraints />
   </rowConstraints>
   <AnchorPane prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: #1d1d1d;">
      <VBox fx:id="menuBar" prefHeight="800.0" prefWidth="150.0" style="-fx-background-color: #353535;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <Pane prefHeight="50.0" prefWidth="150.0">
